
<div class="modal" tabindex="-1" role="dialog" style="display:@_modalDisplayWin; overflow-y: auto;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@_title</h5>
            </div>
            <div class="modal-body">
                <h2> @_ganhadorDoGame </h2>
                <button class="btn btn-primary" @onclick="@(Close)">Fechar</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string _modalDisplayWin { get; set; }
    [Parameter] public string _ganhadorDoGame { get; set; }
    [Parameter] public string _title { get; set; }

    [Parameter] public EventCallback<string> _callbackModalDisplayWin { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

    void Close()
    {
        _modalDisplayWin = GlobalConstants.NONE;
        _callbackModalDisplayWin.InvokeAsync(_modalDisplayWin);
    }
}
