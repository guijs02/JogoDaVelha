@using JogoDaVelha.Classes;
<div class="modal" tabindex="-1" role="dialog" style="display:@modalDisplay; overflow-y: auto;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Hora de jogar</h5>
            </div>
            <div class="modal-body">
                <div>

                    <input type="radio" checked="@IsIASelected" value="1" @onchange="@(() => ChangeTipoGameplaySelect(TipoGameplay.IA))" />
                    <label>Jogar contra IA</label>

                </div>
                <div>

                    <input type="radio" checked="@IsDuplaSelected" value="2" @onchange="@(() => ChangeTipoGameplaySelect(TipoGameplay.Dupla))" />
                    <label>Jogar 1x1</label>
                </div>
                <br />
                Escolha o jogador
                <div>
                    <button class="btn btn-primary" @onclick="@(() => PassToParent(GlobalConstants.X_PNG))">Jogador 1 (X) </button>
                    <button class="btn btn-primary" @onclick="@(() => PassToParent(GlobalConstants.CIRCULO_PNG))">Jogador 2 (O) </button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    public RecursosInitGame RecursosInitGame { get; set; } = new();

    bool IsIASelected => RecursosInitGame.TipoGameplay == TipoGameplay.IA;

    bool IsDuplaSelected => RecursosInitGame.TipoGameplay == TipoGameplay.Dupla;

    public string modalDisplay { get; set; }

    [Parameter] public EventCallback<RecursosInitGame> CallBack { get; set; }

    protected override void OnInitialized()
    {
        modalDisplay = GlobalConstants.BLOCK;
    }
    public void PassToParent(string escolha)
    {
        modalDisplay = GlobalConstants.NONE;
        RecursosInitGame.EscolhaDoUsuario = escolha;
        CallBack.InvokeAsync(RecursosInitGame);
    }
    void ChangeTipoGameplaySelect(TipoGameplay tipoGameplay)
    {
        RecursosInitGame.TipoGameplay = tipoGameplay;
    }
}
